{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [1, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "indent"               : ["error", 4],
    "semi"                 : [2, "always"],
    "no-undef"             : "warn",
    "react/jsx-indent"     : ["error", 4],
    "react/jsx-indent-props"     : ["error", 4],
    "space-before-function-paren": ["error", "never"]
  }
}
